<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <com.github.leondevlifelog.browser.view.LimitHeightRecyclerView
        android:id="@+id/rvTabsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/actionCloseAllTabs"
            style="@style/tabs_item_button"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/actionNewTab"
            style="@style/tabs_item_button"
            android:src="@drawable/ic_new_tab" />

        <ImageView
            android:id="@+id/actionPrivateTab"
            style="@style/tabs_item_button"
            android:src="@drawable/ic_private_tabs" />

    </LinearLayout>


</LinearLayout>