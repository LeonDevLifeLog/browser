<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navigator_height"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@color/white"
        android:gravity="center_vertical">

    <EditText
            android:id="@+id/etSearchInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:layout_marginRight="8dp"
            android:imeOptions="actionSearch"
            android:layout_height="wrap_content"
            android:hint="请输入关键词"
            android:inputType="text"/>

    <TextView
            android:id="@+id/tvSearchResultCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0/0"/>

    <Button
            android:id="@+id/btSearchNextResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackgroundBorderless"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="下一个"/>

    <ImageButton
            android:id="@+id/ibSearchClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_search"/>
</LinearLayout>